<h1>旅行</h1>
<h3>一覧ページ</h3>
<h3>投稿を検索</h3>
 <%= form_tag({controller:"posts",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>

<%= link_to "新規投稿へ", new_post_path %>
<div class="posts-container">
  <% @posts.each do |t| %>
    <div class="post">
      <%= t.name %>
      <%= t.place %>
      <%= t.about %>
      <%= link_to "詳細へ", post_path(t.id) %> 
      <% if user_signed_in? %>
         <% if current_user.already_liked?(t) %>
          <%= button_to post_like_path(id: t.id, post_id: t.id), method: :delete do %>
            <i class="fa-brands fa-gratipay"></i><%= t.likes.count %>
              <p>いいねを取り消す</p><%= t.likes.count %>
          <% end %>
      <% else %>
          <%= button_to post_likes_path(id: t.id, post_id: t.id), method: :post do %>
            <i class="fa-brands fa-gratipay"></i><%= t.likes.count %>
              <p>いいね</p><%= t.likes.count %>
          <% end %>
      <% end %>
  <% else %>
  <i class="fa-brands fa-gratipay"></i><%= t.likes.count %>
      <p>いいねの数 = </p><%= t.likes.count %>
  <% end %>
    </div>
  <% end %>
</div>
<div class="posts-container">
    <% @posts.each do |t| %>
      <div class="tweet">
        
        <!--ここから-->

        <%= image_tag t.image_url, size: "250x200" if t.image? %>

        <!--ここまで-->

        <%= t.name %>
        <%= t.place %>
        <%= t.about %>
        <%= t.created_at %>
        <%= link_to "詳細へ", post_path(t.id) %>
        <%= link_to "編集する", edit_post_path(t.id) %>
        <%= link_to "削除する", post_path(t.id), method: :delete %>
      </div>
    <% end %>
  </div>